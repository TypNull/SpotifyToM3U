<UserControl x:Class="SpotifyToM3U.MVVM.View.SpotifyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpotifyToM3U.MVVM.View"
             xmlns:viewmodel="clr-namespace:SpotifyToM3U.MVVM.ViewModel"
             xmlns:core="clr-namespace:SpotifyToM3U.Core"
             xmlns:conv="clr-namespace:SpotifyToM3U.Core.Converter"
             d:DataContext="{d:DesignInstance Type=viewmodel:SpotifyVM}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <core:BindingProxy x:Key="proxy"
                           Data="{Binding}" />

        <!-- Playlist Item Style -->
        <Style x:Key="PlaylistItem"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource NeutralGrayBrush}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="6" />
            <Setter Property="Margin"
                    Value="4" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource HoverLightBrush}" />
                    <Setter Property="BorderBrush"
                            Value="{StaticResource PrimaryGreenLightBrush}" />
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}"
                             Value="True">
                    <Setter Property="Background"
                            Value="{StaticResource SelectedLightBrush}" />
                    <Setter Property="BorderBrush"
                            Value="{StaticResource PrimaryGreenBrush}" />
                    <Setter Property="BorderThickness"
                            Value="2" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="SpotifyButton"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4"
                                      Direction="270"
                                      ShadowDepth="2"
                                      Opacity="0.3" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- User Info -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="🎵"
                                   FontSize="20"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Spotify Integration"
                                   Style="{StaticResource HeaderText}" />
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}"
                               Style="{StaticResource DescriptionText}"
                               Margin="32,0,0,0" />

                    <StackPanel Orientation="Horizontal"
                                Margin="32,4,0,0"
                                Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="👤 "
                                   FontSize="12" />
                        <TextBlock Text="{Binding CurrentUser}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryGreenBrush}" />
                    </StackPanel>
                </StackPanel>

                <!-- Auth Controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <!-- Loading Indicator -->
                    <Border Width="24"
                            Height="24"
                            Margin="0,0,12,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            Background="{StaticResource PrimaryGreenBrush}"
                            CornerRadius="12">
                        <TextBlock Text="⟳"
                                   FontSize="16"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>

                    <!-- Auth Button -->
                    <Button Content="{Binding IsAuthenticated, Converter={x:Static conv:AuthButtonConverter.Instance}}"
                            Command="{Binding AuthenticateCommand}"
                            Background="{StaticResource PrimaryGreenBrush}"
                            Foreground="White"
                            Style="{StaticResource SpotifyButton}"
                            MinWidth="120" />

                    <!-- Refresh Playlists Button -->
                    <Button Content="🔄 Refresh"
                            Command="{Binding LoadUserPlaylistsCommand}"
                            Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVis}}"
                            Background="{StaticResource PrimaryGreenLightBrush}"
                            Foreground="White"
                            Style="{StaticResource SpotifyButton}"
                            Margin="8,0,0,0"
                            MinWidth="100" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="10,0,10,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Playlists and Manual Input -->
            <Border Grid.Column="0"
                    Style="{StaticResource ModernCard}"
                    Margin="0,0,4,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Style="{StaticResource SectionContainer}">
                        <!-- Mode Toggle -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,12">
                            <ToggleButton Content="📋 My Playlists"
                                          IsChecked="{Binding ShowPlaylists}"
                                          Style="{StaticResource ModernRadioButton}"
                                          IsEnabled="{Binding IsAuthenticated}" />
                            <ToggleButton Content="🔗 Manual URL"
                                          IsChecked="{Binding ShowManualInput}"
                                          Style="{StaticResource ModernRadioButton}"
                                          Margin="16,0,0,0" />
                        </StackPanel>

                        <!-- User Playlists -->
                        <StackPanel Visibility="{Binding ShowPlaylists, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Your Playlists"
                                       Style="{StaticResource SectionHeaderText}" />

                            <ItemsControl ItemsSource="{Binding UserPlaylists}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PlaylistItem}"
                                                Padding="12">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick"
                                                              Command="{Binding Source={StaticResource proxy}, Path=Data.LoadPlaylistCommand}"
                                                              CommandParameter="{Binding}" />
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Playlist Image -->
                                                <Border Grid.Row="0"
                                                        Grid.RowSpan="3"
                                                        Grid.Column="0"
                                                        Width="32"
                                                        Height="32"
                                                        CornerRadius="4"
                                                        Background="#F0F0F0"
                                                        Margin="0,0,8,0">
                                                    <Image Source="{Binding ImageUrl}"
                                                           Stretch="UniformToFill" />
                                                </Border>

                                                <!-- Playlist Name -->
                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="1"
                                                           Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis" />

                                                <!-- Track Count -->
                                                <TextBlock Grid.Row="1"
                                                           Grid.Column="1"
                                                           FontSize="10"
                                                           Foreground="#666666">
                                                    <Run Text="{Binding TrackCount}" />
                                                    <Run Text="tracks" />
                                                </TextBlock>

                                                <!-- Owner -->
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="1"
                                                           Text="{Binding Owner}"
                                                           FontSize="10"
                                                           Foreground="#999999"
                                                           TextTrimming="CharacterEllipsis" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Manual Input -->
                        <StackPanel Visibility="{Binding ShowManualInput, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Playlist URL or ID"
                                       Style="{StaticResource SectionHeaderText}" />

                            <TextBox Text="{Binding PlaylistIDText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernInputField}"
                                     Height="32"
                                     Margin="0,0,0,8" />

                            <Button Content="🔍 Load Playlist"
                                    Command="{Binding LoadPlaylistByIdCommand}"
                                    Background="{StaticResource SecondaryBlueBrush}"
                                    Foreground="White"
                                    Style="{StaticResource SpotifyButton}"
                                    HorizontalAlignment="Stretch" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Tracks -->
            <Border Grid.Column="1"
                    Style="{StaticResource ModernCard}"
                    Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Playlist Header -->
                    <Border Grid.Row="0"
                            Background="#F8F9FA"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,8"
                            Visibility="{Binding SelectedPlaylist, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding PlaylistName}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource NeutralDarkGrayBrush}" />
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock FontSize="12"
                                               Foreground="{StaticResource NeutralMediumGrayBrush}">
                                        <Run Text="{Binding PlaylistLength}" />
                                        <Run Text="tracks" />
                                    </TextBlock>
                                    <TextBlock Text="•"
                                               FontSize="12"
                                               Margin="8,0"
                                               Foreground="{StaticResource NeutralMediumGrayBrush}" />
                                    <TextBlock FontSize="12"
                                               Foreground="{StaticResource PrimaryGreenBrush}">
                                        <Run Text="{Binding PlaylistFound}" />
                                        <Run Text="found locally" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Style="{StaticResource ModernBadge}">
                                <TextBlock FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="White">
                                    <Run Text="{Binding PlaylistFound}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding PlaylistLength}" />
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Tracks List -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PlaylistTracks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            BorderBrush="#F0F0F0"
                                            BorderThickness="0,0,0,1"
                                            Padding="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLocal}"
                                                                 Value="False">
                                                        <Setter Property="Opacity"
                                                                Value="0.6" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Track Image/Icon -->
                                            <Border Grid.Column="0"
                                                    Width="24"
                                                    Height="24"
                                                    CornerRadius="3"
                                                    Background="#F0F0F0">
                                                <Image Source="{Binding ImageURL}"
                                                       Stretch="UniformToFill" />
                                            </Border>

                                            <!-- Track Info -->
                                            <StackPanel Grid.Column="1"
                                                        Margin="8,0">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="11"
                                                           Foreground="#666666"
                                                           TextTrimming="CharacterEllipsis">
                                                    <Run Text="{Binding Artists[0].Name}" />
                                                    <Run Text="•" />
                                                    <Run Text="{Binding Album.Name}" />
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Status Indicator -->
                                            <Border Grid.Column="2"
                                                    CornerRadius="10"
                                                    Padding="8,4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLocal}"
                                                                         Value="True">
                                                                <Setter Property="Background"
                                                                        Value="{StaticResource SuccessBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLocal}"
                                                                         Value="False">
                                                                <Setter Property="Background"
                                                                        Value="{StaticResource AccentRedBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="10"
                                                           Foreground="White"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLocal}"
                                                                             Value="True">
                                                                    <Setter Property="Text"
                                                                            Value="✓ Available" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding IsLocal}"
                                                                             Value="False">
                                                                    <Setter Property="Text"
                                                                            Value="✗ Missing" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding PlaylistTracks.Count, Converter={x:Static conv:ZeroToVisibilityConverter.Instance}}">
                        <TextBlock Text="🎵"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Opacity="0.3" />
                        <TextBlock Text="Select a playlist to view tracks"
                                   FontSize="14"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Style="{StaticResource ModernCard}"
                Margin="10,4,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="💡 Tip: "
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryGreenBrush}" />
                    <TextBlock Text="Connect to Spotify to access your private playlists and get better matching"
                               Style="{StaticResource DescriptionText}" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="➡️ Next Step"
                        Command="{Binding NextCommand}"
                        IsEnabled="{Binding IsNext}"
                        Style="{StaticResource PrimaryButton}"
                        MinWidth="120" />
            </Grid>
        </Border>
    </Grid>
</UserControl>