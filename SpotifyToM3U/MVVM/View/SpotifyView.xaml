<UserControl x:Class="SpotifyToM3U.MVVM.View.SpotifyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpotifyToM3U.MVVM.View"
             xmlns:viewmodel="clr-namespace:SpotifyToM3U.MVVM.ViewModel"
             xmlns:core="clr-namespace:SpotifyToM3U.Core"
             xmlns:conv="clr-namespace:SpotifyToM3U.Core.Converter"
             d:DataContext="{d:DesignInstance Type=viewmodel:SpotifyVM}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <core:BindingProxy x:Key="proxy"
                           Data="{Binding}" />

        <!-- Modern Card Style -->
        <Style x:Key="ModernCard"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#E0E0E0" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="20,15" />
            <Setter Property="Margin"
                    Value="10,10,10,0" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4"
                                      Direction="270"
                                      ShadowDepth="2"
                                      Opacity="0.1" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Playlist Item Style -->
        <Style x:Key="PlaylistItem"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#E0E0E0" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="6" />
            <Setter Property="Margin"
                    Value="4" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#F8FFF8" />
                    <Setter Property="BorderBrush"
                            Value="#FF99CE9C" />
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected}"
                             Value="True">
                    <Setter Property="Background"
                            Value="#E8F5E8" />
                    <Setter Property="BorderBrush"
                            Value="#FF7CDC8F" />
                    <Setter Property="BorderThickness"
                            Value="2" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="SpotifyButton"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4"
                                      Direction="270"
                                      ShadowDepth="2"
                                      Opacity="0.3" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05"
                                            ScaleY="1.05" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98"
                                            ScaleY="0.98" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Loading Animation -->
        <Storyboard x:Key="LoadingAnimation"
                    RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0"
                             To="360"
                             Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Pulse Animation for Loading -->
        <Storyboard x:Key="PulseAnimation"
                    RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0"
                                      Value="0.5" />
                <EasingDoubleKeyFrame KeyTime="0:0:1"
                                      Value="1.0" />
                <EasingDoubleKeyFrame KeyTime="0:0:2"
                                      Value="0.5" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- User Info -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="🎵"
                                   FontSize="20"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Spotify Integration"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FF7CDC8F"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#666666"
                               Margin="32,0,0,0" />

                    <StackPanel Orientation="Horizontal"
                                Margin="32,4,0,0"
                                Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="👤 "
                                   FontSize="12" />
                        <TextBlock Text="{Binding CurrentUser}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#FF7CDC8F" />
                    </StackPanel>
                </StackPanel>

                <!-- Auth Controls -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal">
                    <!-- Improved Loading Indicator -->
                    <Border Width="24"
                            Height="24"
                            Margin="0,0,12,0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            Background="#FF7CDC8F"
                            CornerRadius="12">
                        <Grid>
                            <Ellipse x:Name="LoadingRing1"
                                     Width="16"
                                     Height="16"
                                     Stroke="White"
                                     StrokeThickness="2"
                                     Fill="Transparent"
                                     RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <RotateTransform />
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource LoadingAnimation}" />
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                            <Ellipse Width="8"
                                     Height="8"
                                     Fill="White"
                                     Opacity="0.8">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Storyboard="{StaticResource PulseAnimation}" />
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Grid>
                    </Border>

                    <!-- Auth Button -->
                    <Button Content="{Binding IsAuthenticated, Converter={x:Static conv:AuthButtonConverter.Instance}}"
                            Command="{Binding AuthenticateCommand}"
                            Background="#FF7CDC8F"
                            Tag="#FF50C668"
                            Foreground="White"
                            Style="{StaticResource SpotifyButton}"
                            MinWidth="120" />

                    <!-- Refresh Playlists Button -->
                    <Button Content="🔄 Refresh"
                            Command="{Binding LoadUserPlaylistsCommand}"
                            Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVis}}"
                            Background="#FF99CE9C"
                            Tag="#FF7CDC8F"
                            Foreground="White"
                            Style="{StaticResource SpotifyButton}"
                            Margin="8,0,0,0"
                            MinWidth="100" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="10,0,10,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Playlists and Manual Input -->
            <Border Grid.Column="0"
                    Style="{StaticResource ModernCard}"
                    Margin="0,0,4,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Mode Toggle -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,12">
                            <ToggleButton Content="📋 My Playlists"
                                          IsChecked="{Binding ShowPlaylists}"
                                          Style="{StaticResource ModernRadioButton}"
                                          IsEnabled="{Binding IsAuthenticated}" />
                            <ToggleButton Content="🔗 Manual URL"
                                          IsChecked="{Binding ShowManualInput}"
                                          Style="{StaticResource ModernRadioButton}"
                                          Margin="16,0,0,0" />
                        </StackPanel>

                        <!-- User Playlists -->
                        <StackPanel Visibility="{Binding ShowPlaylists, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Your Playlists"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8" />

                            <ItemsControl ItemsSource="{Binding UserPlaylists}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PlaylistItem}"
                                                Padding="12">
                                            <Border.InputBindings>
                                                <MouseBinding Gesture="LeftClick"
                                                              Command="{Binding Source={StaticResource proxy}, Path=Data.LoadPlaylistCommand}"
                                                              CommandParameter="{Binding}" />
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Playlist Image -->
                                                <Border Grid.Row="0"
                                                        Grid.RowSpan="3"
                                                        Grid.Column="0"
                                                        Width="32"
                                                        Height="32"
                                                        CornerRadius="4"
                                                        Background="#F0F0F0"
                                                        Margin="0,0,8,0">
                                                    <Image Source="{Binding ImageUrl}"
                                                           Stretch="UniformToFill" />
                                                </Border>

                                                <!-- Playlist Name -->
                                                <TextBlock Grid.Row="0"
                                                           Grid.Column="1"
                                                           Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis" />

                                                <!-- Track Count -->
                                                <TextBlock Grid.Row="1"
                                                           Grid.Column="1"
                                                           FontSize="10"
                                                           Foreground="#666666">
                                                    <Run Text="{Binding TrackCount}" />
                                                    <Run Text="tracks" />
                                                </TextBlock>

                                                <!-- Owner -->
                                                <TextBlock Grid.Row="2"
                                                           Grid.Column="1"
                                                           Text="{Binding Owner}"
                                                           FontSize="10"
                                                           Foreground="#999999"
                                                           TextTrimming="CharacterEllipsis" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Manual Input -->
                        <StackPanel Visibility="{Binding ShowManualInput, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Playlist URL or ID"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8" />

                            <TextBox Text="{Binding PlaylistIDText, UpdateSourceTrigger=PropertyChanged}"
                                     Height="32"
                                     Margin="0,0,0,8"
                                     VerticalContentAlignment="Center"
                                     FontSize="12" />

                            <Button Content="🔍 Load Playlist"
                                    Command="{Binding LoadPlaylistByIdCommand}"
                                    Background="#FF74C7EC"
                                    Tag="#FF37A3E6"
                                    Foreground="White"
                                    Style="{StaticResource SpotifyButton}"
                                    HorizontalAlignment="Stretch" 
                                    Margin="15,0,15,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Tracks -->
            <Border Grid.Column="1"
                    Style="{StaticResource ModernCard}"
                    Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Playlist Header -->
                    <Border Grid.Row="0"
                            Background="#F8F9FA"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,8"
                            Visibility="{Binding SelectedPlaylist, Converter={StaticResource BoolToVis}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding PlaylistName}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2E2E2E" />
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,4,0,0">
                                    <TextBlock FontSize="12"
                                               Foreground="#666666">
                                        <Run Text="{Binding PlaylistLength}" />
                                        <Run Text="tracks" />
                                    </TextBlock>
                                    <TextBlock Text="•"
                                               FontSize="12"
                                               Foreground="#666666"
                                               Margin="8,0" />
                                    <TextBlock FontSize="12"
                                               Foreground="#FF7CDC8F">
                                        <Run Text="{Binding PlaylistFound}" />
                                        <Run Text="found locally" />
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Background="#FF99CE9C"
                                    CornerRadius="12"
                                    Padding="8,4">
                                <TextBlock FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="White">
                                    <Run Text="{Binding PlaylistFound}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding PlaylistLength}" />
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Tracks List -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding PlaylistTracks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="Transparent"
                                            BorderBrush="#F0F0F0"
                                            BorderThickness="0,0,0,1"
                                            Padding="8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsLocal}"
                                                                 Value="False">
                                                        <Setter Property="Opacity"
                                                                Value="0.6" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Track Image/Icon -->
                                            <Border Grid.Column="0"
                                                    Width="24"
                                                    Height="24"
                                                    CornerRadius="3"
                                                    Background="#F0F0F0">
                                                <Image Source="{Binding ImageURL}"
                                                       Stretch="UniformToFill" />
                                            </Border>

                                            <!-- Track Info -->
                                            <StackPanel Grid.Column="1"
                                                        Margin="8,0">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock FontSize="11"
                                                           Foreground="#666666"
                                                           TextTrimming="CharacterEllipsis">
                                                    <Run Text="{Binding Artists[0].Name}" />
                                                    <Run Text="•" />
                                                    <Run Text="{Binding Album.Name}" />
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Improved Status Indicator -->
                                            <Border Grid.Column="2"
                                                    CornerRadius="10"
                                                    Padding="8,4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsLocal}"
                                                                         Value="True">
                                                                <Setter Property="Background"
                                                                        Value="#FF7CDC8F" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsLocal}"
                                                                         Value="False">
                                                                <Setter Property="Background"
                                                                        Value="#FFFF6B6B" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="10"
                                                               Foreground="White"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsLocal}"
                                                                                 Value="True">
                                                                        <Setter Property="Text"
                                                                                Value="✓ Available" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsLocal}"
                                                                                 Value="False">
                                                                        <Setter Property="Text"
                                                                                Value="✗ Missing" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding PlaylistTracks.Count, Converter={x:Static conv:ZeroToVisibilityConverter.Instance}}">
                        <TextBlock Text="🎵"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Opacity="0.3" />
                        <TextBlock Text="Select a playlist to view tracks"
                                   FontSize="14"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Style="{StaticResource ModernCard}"
                Margin="10,4,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="💡 Tip: "
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#FF7CDC8F" />
                    <TextBlock Text="Connect to Spotify to access your private playlists and get better matching"
                               FontSize="12"
                               Foreground="#666666" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="➡️ Next Step"
                        Command="{Binding NextCommand}"
                        IsEnabled="{Binding IsNext}"
                        Background="#FF7CDC8F"
                        Tag="#FF50C668"
                        Foreground="White"
                        Style="{StaticResource SpotifyButton}"
                        MinWidth="120" />
            </Grid>
        </Border>
    </Grid>
</UserControl>