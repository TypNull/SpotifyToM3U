<UserControl x:Class="SpotifyToM3U.MVVM.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpotifyToM3U.MVVM.View"
             xmlns:viewmodel="clr-namespace:SpotifyToM3U.MVVM.ViewModel"
             xmlns:core="clr-namespace:SpotifyToM3U.Core"
             d:DataContext="{d:DesignInstance Type=viewmodel:LibraryVM}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- Modern Action Button Style -->
        <Style x:Key="ModernActionButton"
               TargetType="Button"
               BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Height"
                    Value="40" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Margin"
                    Value="0,0,12,0" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4"
                                      Direction="270"
                                      ShadowDepth="2"
                                      Opacity="0.3" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Style="{StaticResource ModernCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Vertical">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="📁"
                                   FontSize="20"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Audio Library"
                                   Style="{StaticResource HeaderText}" />
                    </StackPanel>
                    <TextBlock Text="{Binding StatusText}"
                               Style="{StaticResource DescriptionText}"
                               Margin="32,0,0,0" />
                </StackPanel>

                <!-- File Counter -->
                <Border Grid.Column="1"
                        Style="{StaticResource ModernBadge}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📁"
                                   FontSize="14"
                                   Margin="0,0,6,0" />
                        <TextBlock Text="{Binding AudioFiles.Count}"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="White" />
                        <TextBlock Text=" files"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="2,0,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="1"
                Style="{StaticResource ModernCard}"
                Margin="10,0">
            <DataGrid x:Name="AudioFilesDataGrid"
                      Style="{StaticResource ModernDataGridStyle}"
                      ItemsSource="{Binding AudioFiles}"
                      MinHeight="200"
                      Margin="0"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.IsContainerVirtualizable="True"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Width="220"
                                        Binding="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                        Header="🎵 Title"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="FontWeight"
                                        Value="Medium" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="160"
                                        Binding="{Binding Artists[0], UpdateSourceTrigger=PropertyChanged}"
                                        Header="🎤 Artist"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="160"
                                        Binding="{Binding Album, UpdateSourceTrigger=PropertyChanged}"
                                        Header="💿 Album"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100"
                                        Binding="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"
                                        Header="🎭 Genre"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="80"
                                        Binding="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                                        Header="📅 Year"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="80"
                                        Binding="{Binding Extension}"
                                        Header="🔧 Format"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                                <Setter Property="FontFamily"
                                        Value="Consolas" />
                                <Setter Property="FontWeight"
                                        Value="SemiBold" />
                                <Setter Property="Background"
                                        Value="#F8F9FA" />
                                <Setter Property="TextAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="*"
                                        MinWidth="200"
                                        Binding="{Binding Location}"
                                        Header="📂 Location"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                                <Setter Property="ToolTip"
                                        Value="{Binding Text, RelativeSource={RelativeSource Self}}" />
                                <Setter Property="FontFamily"
                                        Value="Consolas" />
                                <Setter Property="FontSize"
                                        Value="11" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="2"
                Style="{StaticResource ModernCard}"
                Margin="10,8,10,0"
                Visibility="{Binding ShowProgressBar, Converter={StaticResource BoolToVis}}">
            <StackPanel Style="{StaticResource SectionContainer}">
                <!-- Progress Header -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Processing Files..."
                               Style="{StaticResource SectionHeaderText}" />

                    <Button Grid.Column="1"
                            Content="✕ Cancel"
                            Command="{Binding CancelOperationCommand}"
                            Style="{StaticResource DangerButton}"
                            Height="28"
                            Width="80"
                            FontSize="11"
                            Margin="0" />
                </Grid>

                <!-- Progress Bar -->
                <ProgressBar Value="{Binding ProgressValue}"
                             Minimum="0"
                             Maximum="1"
                             Background="#F5F5F5"
                             Foreground="{StaticResource PrimaryGreenBrush}"
                             Height="20"
                             Margin="0,0,0,8" />

                <!-- Progress Details -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding StatusText}"
                               Style="{StaticResource DescriptionText}" />

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="{Binding ProcessedFilesCount}"
                                   FontSize="11"
                                   FontWeight="Bold" />
                        <TextBlock Text=" / "
                                   FontSize="11"
                                   Foreground="#666666" />
                        <TextBlock Text="{Binding TotalFilesCount}"
                                   FontSize="11"
                                   FontWeight="Bold" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="3"
                Style="{StaticResource ModernCard}"
                Margin="10,8,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left side controls -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <StackPanel.Resources>
                        <core:BindingProxy x:Key="Proxy"
                                           Data="{Binding}" />
                    </StackPanel.Resources>

                    <Button Content="➕ Add Files"
                            Width="110"
                            Background="{StaticResource SecondaryBlueBrush}">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="📄 Add File"
                                          Command="{Binding Source={StaticResource Proxy}, Path=Data.AddFileCommand}" />
                                <MenuItem Header="📁 Add Folder"
                                          Command="{Binding Source={StaticResource Proxy}, Path=Data.AddFolderCommand}" />
                            </ContextMenu>
                        </Button.ContextMenu>
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource ModernActionButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowProgressBar}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Opacity"
                                                Value="0.6" />
                                    </DataTrigger>
                                    <EventTrigger RoutedEvent="Click">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                                        <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                                 Value="True" />
                                                    </BooleanAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="🗑️ Clear All"
                            Command="{Binding ClearCommand}"
                            Width="100"
                            Background="{StaticResource AccentRedBrush}">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource ModernActionButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowProgressBar}"
                                                 Value="True">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                        <Setter Property="Opacity"
                                                Value="0.6" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Next button on right -->
                <Button Grid.Column="1"
                        Content="➡️ Next Step"
                        Command="{Binding SpotifyCommand}"
                        IsEnabled="{Binding IsNext}"
                        Width="120"
                        Style="{StaticResource PrimaryButton}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>