<UserControl x:Class="SpotifyToM3U.MVVM.View.LibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpotifyToM3U.MVVM.View"
             xmlns:viewmodel="clr-namespace:SpotifyToM3U.MVVM.ViewModel"
             xmlns:core="clr-namespace:SpotifyToM3U.Core"
             d:DataContext="{d:DesignInstance Type=viewmodel:LibraryVM}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Margin="10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <DataGrid x:Name="AudioFilesDataGrid"
                      Style="{StaticResource ModernDataGridStyle}"
                      ItemsSource="{Binding AudioFiles}"
                      MinHeight="200"
                      Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="200"
                                        Binding="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Title"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="FontWeight"
                                        Value="Medium" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="150"
                                        Binding="{Binding Artists[0], UpdateSourceTrigger=PropertyChanged}"
                                        Header="Artist"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="150"
                                        Binding="{Binding Album, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Album"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="100"
                                        Binding="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Genre"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="80"
                                        Binding="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                                        Header="Year"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="80"
                                        Binding="{Binding Extension}"
                                        Header="Format"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Center" />
                                <Setter Property="FontFamily"
                                        Value="Consolas" />
                                <Setter Property="FontWeight"
                                        Value="SemiBold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Width="*"
                                        MinWidth="200"
                                        Binding="{Binding Location}"
                                        Header="Location"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Padding"
                                        Value="8,0" />
                                <Setter Property="VerticalAlignment"
                                        Value="Center" />
                                <Setter Property="TextTrimming"
                                        Value="CharacterEllipsis" />
                                <Setter Property="ToolTip"
                                        Value="{Binding Text, RelativeSource={RelativeSource Self}}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Bottom control panel -->
        <Grid Grid.Row="1"
              Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left side controls -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal">
                <StackPanel.Resources>
                    <core:BindingProxy x:Key="Proxy"
                                       Data="{Binding}" />
                </StackPanel.Resources>

                <Button Content="Add Files..."
                        HorizontalAlignment="Left"
                        Width="90"
                        Tag="#FF37A3E6"
                        Background="LightSkyBlue"
                        Margin="0,0,10,0"
                        Height="35">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add File"
                                      Command="{Binding Source={StaticResource Proxy}, Path=Data.AddFileCommand}" />
                            <MenuItem Header="Add Folder"
                                      Command="{Binding Source={StaticResource Proxy}, Path=Data.AddFolderCommand}" />
                        </ContextMenu>
                    </Button.ContextMenu>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}"
                               BasedOn="{StaticResource MenuButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowProgressBar}"
                                             Value="True">
                                    <Setter Property="IsEnabled"
                                            Value="False" />
                                </DataTrigger>
                                <EventTrigger RoutedEvent="Click">
                                    <EventTrigger.Actions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                                    <DiscreteBooleanKeyFrame KeyTime="0:0:0"
                                                                             Value="True" />
                                                </BooleanAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger.Actions>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Clear All"
                        Command="{Binding ClearCommand}"
                        HorizontalAlignment="Left"
                        Width="85"
                        Tag="#FFE74C3C"
                        Background="#FFFF6B6B"
                        Height="35">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}"
                               BasedOn="{StaticResource MenuButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowProgressBar}"
                                             Value="True">
                                    <Setter Property="IsEnabled"
                                            Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Progress bar in center -->
            <Grid Grid.Column="1"
                  Width="300"
                  HorizontalAlignment="Center"
                  Margin="20,0"
                  Visibility="{Binding ShowProgressBar,Converter={StaticResource BoolToVis}}">
                <Border Background="White"
                        CornerRadius="18"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Height="36">
                    <Grid>
                        <ProgressBar Height="32"
                                     Margin="2"
                                     Minimum="0"
                                     Maximum="1"
                                     Value="{Binding ProgressValue,UpdateSourceTrigger=PropertyChanged,Mode=OneWay,Delay=1000}"
                                     Foreground="#FF7CDC8F"
                                     Background="Transparent"
                                     BorderThickness="0">
                            <ProgressBar.Clip>
                                <RectangleGeometry RadiusX="16"
                                                   RadiusY="16"
                                                   Rect="0,0,296,32" />
                            </ProgressBar.Clip>
                        </ProgressBar>
                        <TextBlock Text="{Binding ProgressValue,Mode=OneWay,Delay=1000, StringFormat=P1}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Foreground="#2E2E2E"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                    </Grid>
                </Border>
            </Grid>

            <!-- Next button on right -->
            <Button Grid.Column="2"
                    Content="Next"
                    Style="{StaticResource MenuButtonStyle}"
                    Command="{Binding SpotifyCommand}"
                    IsEnabled="{Binding IsNext}"
                    Width="85"
                    Tag="#FF50C668"
                    Background="#FF7CDC8F"
                    Height="35" />
        </Grid>
    </Grid>
</UserControl>