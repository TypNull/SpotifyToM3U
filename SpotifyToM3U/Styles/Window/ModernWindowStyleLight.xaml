<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:SpotifyToM3U.Core.Converter"
                    xmlns:windowheaderstyles="clr-namespace:SpotifyToM3U.MVVM.View.Windows">

    <!-- Modern Window Style with improved aesthetics -->
    <Style x:Key="ModernWindowStyleLight"
           TargetType="{x:Type Window}">
        <Setter Property="AllowsTransparency"
                Value="True" />
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="ResizeMode"
                Value="CanResize" />
        <Setter Property="WindowStyle"
                Value="None" />
        <Setter Property="MinHeight"
                Value="400" />
        <Setter Property="MinWidth"
                Value="700" />
        <Setter Property="UseLayoutRounding"
                Value="True" />
        <Setter Property="TextOptions.TextFormattingMode"
                Value="Display" />
        <Setter Property="TextOptions.TextRenderingMode"
                Value="ClearType" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="50"
                              CornerRadius="12"
                              ResizeBorderThickness="8"
                              NonClientFrameEdges="None"
                              UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Grid>
                        <!-- Drop Shadow (only when not maximized) -->
                        <Border x:Name="DropShadow"
                                Margin="10"
                                Background="Black"
                                Opacity="0.3"
                                CornerRadius="16"
                                IsHitTestVisible="False">
                            <Border.Effect>
                                <BlurEffect Radius="10" />
                            </Border.Effect>
                        </Border>

                        <!-- Main Window Border -->
                        <Border x:Name="WindowBorder"
                                Margin="10"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                CornerRadius="12"
                                Background="White"
                                ClipToBounds="True">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Title Bar -->
                                <Grid Grid.Row="0"
                                      Height="50"
                                      Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- App Icon and Title -->
                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="16,0,0,0">
                                        <Image Source="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}"
                                               RenderOptions.BitmapScalingMode="HighQuality"
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,8,0" />
                                        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource TemplatedParent}}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="#2E2E2E"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>

                                    <!-- Drag Area -->
                                    <Rectangle Grid.Column="1"
                                               Fill="Transparent"
                                               WindowChrome.IsHitTestVisibleInChrome="False" />

                                    <!-- Window Controls -->
                                    <windowheaderstyles:ControlView Grid.Column="2" />
                                </Grid>

                                <!-- Content Area -->
                                <Border x:Name="ContentBorder"
                                        Grid.Row="1"
                                        Background="White"
                                        CornerRadius="0,0,12,12"
                                        ClipToBounds="True">
                                    <ContentPresenter />
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Maximized State -->
                        <Trigger Property="WindowState"
                                 Value="Maximized">
                            <Setter TargetName="WindowBorder"
                                    Property="Margin"
                                    Value="0" />
                            <Setter TargetName="WindowBorder"
                                    Property="CornerRadius"
                                    Value="0" />
                            <Setter TargetName="ContentBorder"
                                    Property="CornerRadius"
                                    Value="0" />
                            <Setter TargetName="DropShadow"
                                    Property="Visibility"
                                    Value="Collapsed" />
                        </Trigger>

                        <!-- Active/Inactive States -->
                        <Trigger Property="IsActive"
                                 Value="False">
                            <Setter TargetName="WindowBorder"
                                    Property="BorderBrush"
                                    Value="#D0D0D0" />
                        </Trigger>

                        <Trigger Property="IsActive"
                                 Value="True">
                            <Setter TargetName="WindowBorder"
                                    Property="BorderBrush"
                                    Value="#FF99CE9C" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Window State Triggers -->
        <Style.Triggers>
            <Trigger Property="WindowState"
                     Value="Maximized">
                <Setter Property="WindowChrome.WindowChrome">
                    <Setter.Value>
                        <WindowChrome CaptionHeight="50"
                                      CornerRadius="0"
                                      ResizeBorderThickness="0"
                                      NonClientFrameEdges="None"
                                      UseAeroCaptionButtons="False" />
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>